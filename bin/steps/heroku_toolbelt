if [ ! -f /usr/local/heroku/heroku-toolbelt-version ]; then
  bpwatch start install_heroku_toolbelt
   
  curl -s https://s3.amazonaws.com/assets.heroku.com/heroku-client/heroku-client.tgz | tar xz
   
  rm -rf /usr/local/heroku
  mkdir -p /usr/local/heroku
  cd /usr/local/heroku

  mv heroku-client/* .
  rmdir heroku-client

  PATH="/usr/local/heroku:$PATH"
  echo "3.40.9" > /usr/local/heroku/heroku-toolbelt-version

  bpwatch stop install_heroku_toolbelt
fi
